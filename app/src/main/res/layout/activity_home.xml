<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.HomeActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
     <androidx.core.widget.NestedScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:fillViewport="true">
         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <TextView
                 android:id="@+id/tvhi"
                 android:layout_marginTop="@dimen/_5sdp"
                 android:layout_marginStart="@dimen/_15sdp"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 android:textColor="@color/purple_200"
                 android:textSize="@dimen/_15ssp"
                 android:text="Hi Bao"
                 android:textStyle="bold"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

             <TextView
                 android:id="@+id/tv"
                 android:layout_marginTop="@dimen/_2sdp"
                 app:layout_constraintTop_toBottomOf="@id/tvhi"
                 app:layout_constraintStart_toStartOf="@id/tvhi"
                 android:textSize="@dimen/_14ssp"
                 android:text="Eat and order"
                 android:textStyle="bold"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

             <ImageView
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:layout_marginEnd="@dimen/_10sdp"
                 android:src="@drawable/man"
                 android:layout_width="@dimen/_40sdp"
                 android:layout_height="@dimen/_40sdp"/>

             <EditText
                 android:id="@+id/esearch"
                 android:layout_marginTop="@dimen/_10sdp"
                 app:layout_constraintTop_toBottomOf="@id/tv"
                 android:layout_marginStart="@dimen/_15sdp"
                 android:layout_marginEnd="@dimen/_15sdp"
                 android:hint="Bạn muốn tìm gì?"
                 android:drawableLeft="@drawable/ic_search"
                 android:drawablePadding="@dimen/_5sdp"
                 android:background="@drawable/back_edit"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"/>

             <androidx.constraintlayout.widget.ConstraintLayout
                 android:id="@+id/container1"
                 android:layout_marginTop="@dimen/_2sdp"
                 android:layout_marginStart="@dimen/_15sdp"
                 android:layout_marginEnd="@dimen/_15sdp"
                 app:layout_constraintTop_toBottomOf="@id/esearch"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_140sdp">
                 <com.airbnb.lottie.LottieAnimationView
                     android:id="@+id/lottie"
                     app:lottie_loop="true"
                     app:lottie_autoPlay="true"
                     app:lottie_repeatMode="reverse"
                     app:lottie_rawRes="@raw/shipping"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"/>

                 <TextView
                     android:layout_marginTop="@dimen/_10sdp"
                     android:layout_marginRight="@dimen/_15sdp"
                     app:layout_constraintTop_toTopOf="@id/lottie"
                     app:layout_constraintEnd_toEndOf="@id/lottie"
                     android:textStyle="bold"
                     android:text="Freeship"
                     android:textColor="@color/purple_200"
                     android:textSize="@dimen/_16sdp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>

             </androidx.constraintlayout.widget.ConstraintLayout>

             <TextView
                 android:id="@+id/tvcategories"
                 android:layout_marginTop="@dimen/_2sdp"
                 android:text="Categories"
                 android:textSize="@dimen/_15ssp"
                 android:textColor="@color/black"
                 android:textStyle="bold"
                 app:layout_constraintTop_toBottomOf="@id/container1"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginStart="@dimen/_15sdp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

             <androidx.recyclerview.widget.RecyclerView
                 android:id="@+id/rc_category"
                 app:layout_constraintTop_toBottomOf="@id/tvcategories"
                 app:layout_constraintStart_toStartOf="@id/tvcategories"
                 android:layout_marginLeft="@dimen/_10sdp"
                 android:layout_marginRight="@dimen/_10sdp"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_120sdp"/>

             <TextView
                 android:id="@+id/tvpopular"
                 android:layout_marginTop="@dimen/_2sdp"
                 android:text="Popular"
                 android:textSize="@dimen/_15ssp"
                 android:textColor="@color/black"
                 android:textStyle="bold"
                 app:layout_constraintTop_toBottomOf="@id/rc_category"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginStart="@dimen/_15sdp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

             <androidx.recyclerview.widget.RecyclerView
                 android:id="@+id/rc_popular"
                 app:layout_constraintTop_toBottomOf="@id/tvpopular"
                 app:layout_constraintStart_toStartOf="@id/tvpopular"
                 android:layout_marginLeft="@dimen/_10sdp"
                 android:layout_marginRight="@dimen/_10sdp"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_120sdp"/>

         </androidx.constraintlayout.widget.ConstraintLayout>
     </androidx.core.widget.NestedScrollView>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/botombar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp">
            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:fabCradleMargin="@dimen/_5sdp"
                app:fabCradleRoundedCornerRadius="@dimen/_40sdp"
                app:fabCradleVerticalOffset="@dimen/_2sdp">
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/ic_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_gravity="center"
                            android:text="Home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/ic_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_gravity="center"
                            android:text="Info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/ic_support"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_gravity="center"
                            android:text="Support"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/ic_settings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_gravity="center"
                            android:text="Setting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.bottomappbar.BottomAppBar>
            
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:backgroundTint="@color/purple_200"
                android:src="@drawable/ic_cart"
                app:layout_anchor="@id/appbar"
                android:elevation="@dimen/_5sdp"
                app:elevation="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>